import javax.validation.*;


public class PasswordCheckConstraintValidator implements ConstraintValidator<PasswordCheck, String> {
 
    String pass;
 
    @Override
    public void initialize(PasswordCheck pc) { 
    	this.pass=pc.value();
    }
 
    @Override
    public boolean isValid(String passwordField, ConstraintValidatorContext cxt) {
        if(passwordField == null) {
            return false;
        }
        return passwordField.equals(pass);
    }
 
}
